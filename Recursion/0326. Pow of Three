
class Solution {
public:
    bool isPowerOfThree(int n) {
        if (n <= 0) return false;
        while (n % 3 == 0) {
            n /= 3;
        }
        return n == 1;
    }
};

class Solution {
public:
    bool isPowerOfThree(int n) {
        if(n<=0) return false;
        long long pow=1;
        while(pow<n){
            pow*=3;
        }
        return pow==n;
    }
};
